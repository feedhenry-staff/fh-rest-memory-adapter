  "keywords": [
    "in-memory",
    "memory",
    "adapter",
    "fh",
    "rh",
    "rhmap",
    "fh-rest"
  ],
  "author": "Evan Shortiss",
  "license": "MIT",
  "devDependencies": {
    "chai": "^3.5.0",
    "express": "^4.13.4",
    "fh-mbaas-api": "^5.5.0",
    "istanbul": "^0.4.3",
    "jshint": "^2.9.2",
    "linelint": "^1.0.0",
    "mocha": "^2.4.5",
    "sinon": "^1.17.4",
    "supertest": "^0.9.2"
  }
}
